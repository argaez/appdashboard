<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card shadow p-4" style="min-width: 400px;">
    <h3 class="mb-4 text-center">Sign in to your account</h3>

    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-grid gap-2 mb-3">
        <%= f.submit "Sign in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-secondary d-block mb-1" %>
      <%= link_to "Donâ€™t have an account? Sign up", new_registration_path(resource_name), class: "link-primary" %>
    </div>
  </div>
</div>
